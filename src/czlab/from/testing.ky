(ns ^{:doc "Kirby's unit test framework."
      :author "Kenneth Leung"}
  czlab.kirby.testing

  (:require ["./stdlib" :as std]))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defmacro deftest- "" [name & body] `(def- ~name (fn [] ~@body)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defmacro deftest "" [name & body] `(def ~name (fn [] ~@body)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defmacro testing "" [title & body]
  `(do (println "testing: " ~title) ~@body))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defmacro is "" [form & [msg]]
  `(let [____ret ~form]
     (if-not ____ret (throw (or ~msg "assertion error")))))

(defn xxx "" [] (console.log "poo poo"))
