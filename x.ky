(ns ^{:doc ""
      :author "Kenneth Leung"}
  czlab.elmo.ecs.core
  (:require ["kirby"
             :as ky :refer [Atom atom swap! conj! disj!]]))

(defmacro poopoo "" [bindings & more]
  (let* [e (count* more)
         b (count* bindings)]
    (if* (not* (is-even? b))
       (throw* "wanted even number of binding forms")
       (if* (> e 0)
         `(do (vars ~@bindings) ~@more)
         `(vars ~@bindings )))))

(defn xxx []

  (poopoo [x 1 y 0]
          (+ 1 2)
          (- 3 4))

  )

