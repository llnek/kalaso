#!/bin/sh
COMPILER="bin/boot.js"
TESTER="bin/test.js"
DISTDIR=dist
OUTDIR=out
#make and clean out dir
if [ ! -d $OUTDIR ]; then
  if [ -e $OUTDIR ]; then
    rm $OUTDIR
  fi
  mkdir $OUTDIR
else
  rm $OUTDIR/*.js
fi

#compile files
for n in stdlib parser engine compiler main
do
  ${COMPILER} -f src/czlab/kirby/${n}.ky $OUTDIR/${n}.js
done

#compile test files
${TESTER} -f test/test.ky

#run test cases
TESTOUT=/tmp/kirby-test.out
PASSED=0
node test/test.js > $TESTOUT
ERRCOUNT=`grep FAILED $TESTOUT | wc -c`
if [ "0" != $ERRCOUNT ]; then
  cat $TESTOUT
  exit 1
else 
  PASSED=1
fi

#move files to dist
if [ "1" = $PASSED ]; then
  echo "Copying files for distribution!"
  rm $DISTDIR/*.js
  cp $OUTDIR/*.js $DISTDIR
fi





